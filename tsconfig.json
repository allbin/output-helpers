{
    "compilerOptions": {
        "target": "es6", 
        "moduleResolution": "node",
        "lib": [
            "es7",
            "dom"
        ],
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}